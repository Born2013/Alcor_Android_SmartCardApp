<TabWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/artisttab"
        android:focusable="true"
        android:background="@drawable/bird_ic_tab_selected_holo"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/albumtab"
        android:focusable="true"
        android:background="@drawable/bird_ic_tab_unselected_holo"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bird_main_tab_left"
        />

    <ImageView
        android:id="@+id/songtab"
        android:focusable="true"
        android:background="@drawable/bird_ic_tab_unselected_holo"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bird_main_tab_left"
        />

    <ImageView
        android:id="@+id/playlisttab"
        android:focusable="true"
        android:background="@drawable/bird_ic_tab_unselected_holo"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bird_main_tab_left"
        />

    <ImageView
        android:id="@+id/nowplayingtab"
        android:focusable="false"
        android:background="@drawable/bird_ic_tab_unselected_holo"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bird_main_tab_left"
        />

    <ImageButton android:id="@+id/overflow_menu"
        android:layout_width="48dip"
        android:layout_height="64dip"
        android:src="@drawable/ic_menu_overflow"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/btn_nowplaying_background_small"
        android:visibility="gone"
        />

</TabWidget>

