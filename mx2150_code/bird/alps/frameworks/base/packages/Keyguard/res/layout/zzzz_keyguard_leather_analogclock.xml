<com.android.keyguard.BirdKeyguardLeatherStandByScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    xmlns:androidbird="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/leather_cover_host_view_width_style1"
    android:layout_height="@dimen/leather_cover_host_view_height_style1">
    
    <RelativeLayout
        android:id="@+id/bird_standby_view"
        android:layout_width="@dimen/leather_cover_host_view_width_style1"
        android:layout_height="@dimen/leather_cover_host_view_height_style1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/leather_cover_host_view_margin_right_style1">

        <com.android.keyguard.BirdDigitalClock
            android:id="@+id/digitalClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/leather_cover_time_margin_top_stylel"
            androidbird:time_hour_res="@array/zzzzz_keyguard_bird_digital_number_targets_style1"
            androidbird:time_minute_res="@array/zzzzz_keyguard_bird_digital_number_targets_style1" />

        <TextView
            android:id="@+id/zzzz_keyguard_bird_leather_apm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digitalClock"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone" />
            
        <com.android.keyguard.LeatherAnalogClock
            android:id="@+id/anagclock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            androidprv:dial="@drawable/zzzzz_leather_analogclock_bg_style1"
            androidprv:hand_hour="@drawable/zzzzz_leather_analogclock_hour_style1"
            androidprv:hand_minute="@drawable/zzzzz_leather_analogclock_minute_style1"
            androidprv:hand_second="@drawable/zzzzz_leather_analogclock_second_style1" />
            
        <LinearLayout
            android:id="@+id/zzzz_keyguard_leather_date_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/leather_cover_music_bottom_style1"
            android:orientation="vertical">

            <TextClock
                android:id="@+id/zzzz_keyguard_bird_leather_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/zzzz_keyguard_bird_leather_week_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/zzzz_leather_call_mms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/zzzz_leather_missed_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"   
                android:layout_marginLeft="20dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zzzzz_bird_leather_style1_miss_call" />

                <TextView
                    android:id="@+id/zzzz_leather_missed_call_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zzzz_leather_mms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zzzzz_bird_leather_style1_unread_message" />

                <TextView
                    android:id="@+id/zzzz_leather_mms_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</com.android.keyguard.BirdKeyguardLeatherStandByScreen>
