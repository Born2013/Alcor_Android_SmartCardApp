<!--[BIRD][BIRD_KUSAI_KEYGUARD][基于原生锁屏的酷赛锁屏][zhangaman][20170623]begin-->
<com.android.keyguard.KeyguardStatusView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyguard_status_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    androidprv:layout_maxWidth="@dimen/keyguard_security_width"
    androidprv:layout_maxHeight="@dimen/keyguard_security_height"
    android:gravity="center_horizontal|top">
    <LinearLayout
        android:id="@+id/keyguard_clock_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginLeft="24dp">
        <!--[BIRD][BUG #7885 锁屏界面时间没有上午、下午][chenguangxiang][20161229] BEGIN-->
        <LinearLayout 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                style="@style/widget_big_thin"
                android:layout_marginBottom="@dimen/bottom_text_spacing_digital">
            <TextClock
                android:id="@+id/clock_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|top"
                android:textColor="@color/clock_white"
                android:singleLine="true"
                style="@style/widget_big_thin"
                android:textSize="68sp"
                android:format12Hour="@string/keyguard_widget_12_hours_format"
                android:format24Hour="@string/keyguard_widget_24_hours_format" 
                android:layout_marginBottom="@dimen/bottom_text_spacing_digital"/>
                
            <TextView android:id="@+id/am_pm" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_toEndOf="@id/clock_view"
                android:layout_alignBaseline="@id/clock_view" 
                android:textColor="@color/clock_white"
                android:singleLine="true"
                android:ellipsize="none" 
                android:textSize="14sp"
                android:layout_marginStart="8dip" />
            
        </LinearLayout>
        <!--[BIRD][BUG #7885 锁屏界面时间没有上午、下午][chenguangxiang][20161229] END-->

        <include layout="@layout/bird_kusai_keyguard_status_area" />
        <com.android.keyguard.BirdCarrierText
            android:id="@+id/birdkusai_keyguard_carrier_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="marquee"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/owner_info"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/date_owner_info_margin"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/clock_gray"
            android:textSize="@dimen/widget_label_font_size"
            android:letterSpacing="0.05"
            android:ellipsize="marquee"
            android:singleLine="true" />

    </LinearLayout>
</com.android.keyguard.KeyguardStatusView>
<!--[BIRD][BIRD_KUSAI_KEYGUARD][基于原生锁屏的酷赛锁屏][zhangaman][20170623]end-->
